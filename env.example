# Environment Variables Template
# Copy this to .env for local development

# Database Configuration
# Get this from your Neon dashboard after setting up the integration
POSTGRES_URL=postgresql://username:password@host:5432/database
# Alternative name that some services use
DATABASE_URL=postgresql://username:password@host:5432/database

# Application Settings
NODE_ENV=development
PORT=3000

# Domain (for production)
DOMAIN=yourdomain.com

# Authentication Settings
# IMPORTANT: Change these for production!
ADMIN_USERNAME=admin
# Generate a secure password hash using: node -e "console.log(require('crypto').pbkdf2Sync('your-password', 'rumahs-admin-salt-2025', 100000, 64, 'sha512').toString('hex'))"
ADMIN_PASSWORD_HASH=your-generated-hash-here
ADMIN_PASSWORD_SALT=rumahs-admin-salt-2025
